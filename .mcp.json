{
  "mcpServers": {
    "context7-docusaurus": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@context7/mcp-docusaurus"
      ],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}",
        "DOCUSAURUS_PATH": "./robotics-book"
      }
    },
    "github": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}